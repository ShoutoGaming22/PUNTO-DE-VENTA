{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/main",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "noEmit": false
  },
  "include": ["src/main/**/*"],
  "exclude": ["src/renderer", "src/backend"]
}
