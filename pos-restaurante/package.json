{
  "name": "pos-restaurante",
  "version": "1.0.0",
  "description": "Sistema POS Profesional para Restaurantes - Offline First",
  "main": "electron-main.cjs",
  "homepage": "./",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron:watch\" \"npm run dev:electron\" \"npm run dev:backend\" \"npm run dev:react\"",
    "dev:electron:watch": "node scripts/build-electron-watch.cjs",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "dev:backend": "tsx src/backend/server.ts",
    "dev:react": "vite",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json && node -e \"const fs = require('fs'); fs.renameSync('dist/main/index.js', 'dist/main/index.cjs'); fs.renameSync('dist/main/preload.js', 'dist/main/preload.cjs');\"",
    "build:backend": "tsc -p tsconfig.backend.json",
    "pack": "electron-builder --win --publish never",
    "dist": "npm run build && npm run pack",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "prestart": "npm run build:react && npm run build:electron && npm run build:backend"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-updater": "^6.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.1.1",
    "tailwindcss": "^4.1.18",
    "electron-is-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vitest": "^1.1.0",
    "wait-on": "^7.1.0"
  },
  "dependencies": {
    "20": "^3.1.9",
    "axios": "^1.6.2",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "zustand": "^4.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.lajicaradas.pos",
    "productName": "LA JICARADAS POS",
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
